<Window x:Class="KaraokeMakerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KaraokeMakerWPF"
        mc:Ignorable="d"
        Title="Создатель Караоке"
        Height="750"
        Width="800">
    <Grid>
        <Button x:Name="SelectImageBtn" Content="Выбрать изображение" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="SelectImageBtn_Click"/>
        <Button x:Name="SelectMusicBtn" Content="Выбрать файл mp3" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="SelectMusicBtn_Click"/>
        <Button x:Name="SelectOutputFolderBtn" Content="Выбрать папку для видео" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="SelectOutputFolderBtn_Click"/>
        <Button x:Name="SelectFfmpegBtn" Content="Выбрать файл ffmpeg" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="SelectFfmpegBtn_Click"/>
        <Button x:Name="StartCreatingKaraokeBtn" Content="Начать создание караоке" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="StartCreatingKaraokeBtn_Click"/>

        <Label x:Name="ImageLabel" HorizontalAlignment="Left" Margin="215,12,0,0" VerticalAlignment="Top"/>
        <Label x:Name="MusicLabel" HorizontalAlignment="Left" Margin="215,49,0,0" VerticalAlignment="Top"/>
        <Label x:Name="OutputFolderLabel" HorizontalAlignment="Left" Margin="215,84,0,0" VerticalAlignment="Top"/>
        <Label x:Name="FfmpegLabel" HorizontalAlignment="Left" Margin="215,120,0,0" VerticalAlignment="Top"/>
        <Label x:Name="ResultLabel" HorizontalAlignment="Left" Margin="10,185,0,0" VerticalAlignment="Top"/>

        <Button x:Name="SelectTextFileBtn" Content="Выбрать файл с текстом песни" HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="SelectTextFileBtn_Click"/>
        <Label x:Name="TextFileLabel" HorizontalAlignment="Left" Margin="220,232,0,0" VerticalAlignment="Top"/>

        <Button x:Name="ParseTextFileBtn" Content="Распарсить текст песни" HorizontalAlignment="Left" Margin="10,265,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="ParseTextFileBtn_Click"/>

        <Button x:Name="OpenVideoFileBtn" Content="Открыть видео" HorizontalAlignment="Left" Margin="10,326,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="OpenVideoFileBtn_Click"/>

        <MediaElement x:Name="VideoMediaElement" HorizontalAlignment="Left" Height="205" Margin="10,361,0,0" VerticalAlignment="Top" Width="314" LoadedBehavior="Manual" UnloadedBehavior="Stop" Stretch="Uniform"/>

        <Button x:Name="NextLineBtn" Content="Следующая строка" HorizontalAlignment="Left" Margin="340,361,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="NextLineBtn_Click"/>
        <Label x:Name="CurrentLineLabel" HorizontalAlignment="Left" Margin="340,396,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="AllInfoList" Margin="340,438,126,167"/>

        <Button x:Name="SelectVideoFileBtn" Content="Выбрать файл с видео" HorizontalAlignment="Left" Margin="10,577,0,0" VerticalAlignment="Top" Height="30" Width="310" Click="SelectVideoFileBtn_Click"/>
        <Label x:Name="VideoFileLabel" HorizontalAlignment="Left" Margin="326,579,0,0" VerticalAlignment="Top"/>

        <Button x:Name="SelectFontFileBtn" Content="Выбрать файл со шрифтом" HorizontalAlignment="Left" Margin="10,612,0,0" VerticalAlignment="Top" Height="30" Width="310" Click="SelectFontFileBtn_Click"/>
        <Label x:Name="FontFileLabel"  HorizontalAlignment="Left" Margin="326,614,0,0" VerticalAlignment="Top"/>
        
        <Button x:Name="CreateKaraokeVideoBtn" Content="Создать КАРАОКЕ!!!" HorizontalAlignment="Left" Margin="10,647,0,0" VerticalAlignment="Top" Height="30" Width="310" Click="CreateKaraokeVideoBtn_Click"/>
    </Grid>
</Window>
