<UserControl x:Class="KaraokeMakerWPF.Controls.Views.SelectFont"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaraokeMakerWPF.Controls.Views"
             mc:Ignorable="d" d:DesignWidth="800" Height="45"
             x:Name="SelectFontRoot">
    <Grid>
        <Button x:Name="SelectFontFileBtn" Content="Выбрать файл со шрифтом" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="310" Click="SelectFontFileBtn_Click"/>
        <Label x:Name="FontFileLabel" Content="{Binding FontFilePath, ElementName=SelectFontRoot}" Margin="316,2,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
