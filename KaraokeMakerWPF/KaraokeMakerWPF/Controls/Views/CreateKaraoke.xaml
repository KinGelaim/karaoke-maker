<UserControl x:Class="KaraokeMakerWPF.Controls.Views.CreateKaraoke"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaraokeMakerWPF.Controls.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="SelectOutputFolderBtn" Content="Выбрать папку для видео" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Click="SelectOutputFolderBtn_Click"/>
        <Label x:Name="OutputFolderLabel" Margin="205,2,0,0" VerticalAlignment="Top"/>

        <Button x:Name="SelectFfmpegBtn" Content="Выбрать файл ffmpeg" HorizontalAlignment="Left" Margin="0,35,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="SelectFfmpegBtn_Click"/>
        <Label x:Name="FfmpegLabel" Margin="205,37,0,0" VerticalAlignment="Top"/>

        <Button x:Name="CreateKaraokeVideoBtn" Content="Создать КАРАОКЕ!!!" HorizontalAlignment="Left" Margin="0,70,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="CreateKaraokeVideoBtn_Click"/>
    </Grid>
</UserControl>
