<UserControl x:Class="KaraokeMakerWPF.Controls.Views.SelectBackground"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaraokeMakerWPF.Controls.Views"
             xmlns:models="clr-namespace:KaraokeMakerWPF.Controls.Models"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="800">
    <Grid>
        <Button x:Name="SelectImageBtn" Content="Выбрать изображение" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Click="SelectImageBtn_Click"/>
        <Label x:Name="ImageLabel" Content="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ImageFilePath}" Margin="205,2,0,0" VerticalAlignment="Top"/>
        <Image Source="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ImageFilePath}" Margin="0,40,0,0" Width="800"/>
    </Grid>
</UserControl>
