<UserControl x:Class="KaraokeMakerWPF.Controls.Views.SelectSongText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaraokeMakerWPF.Controls.Views"
             xmlns:models="clr-namespace:KaraokeMakerWPF.Controls.Models"
             d:DataContext="{d:DesignInstance Type=models:SelectSongTextViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="SelectTextFileBtn" Content="Выбрать файл с текстом песни" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Click="SelectTextFileBtn_Click"/>
        <Label x:Name="TextFileLabel" Content="{Binding SongTextFilePath}" Margin="210,2,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ParseTextFileBtn" Content="Распарсить текст песни" HorizontalAlignment="Left" Margin="0,35,0,0" VerticalAlignment="Top" Height="30" Width="200" Click="ParseTextFileBtn_Click"/>

        <ListBox x:Name="Song" ItemsSource="{Binding Lines}" Margin="0,70,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBox x:Name="TextBoxList" Text="{Binding Path=.}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
