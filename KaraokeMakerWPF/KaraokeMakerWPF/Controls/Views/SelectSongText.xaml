<UserControl x:Class="KaraokeMakerWPF.Controls.Views.SelectSongText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaraokeMakerWPF.Controls.Views"
             xmlns:models="clr-namespace:KaraokeMakerWPF.Controls.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="selectSongTextRoot">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <Button x:Name="SelectTextFileBtn" Grid.Row="0" Content="Выбрать файл с текстом песни" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Click="SelectTextFileBtn_Click"/>
        <Label x:Name="TextFileLabel" Grid.Row="0" Content="{Binding SongTextFilePath, ElementName=selectSongTextRoot}" Margin="210,2,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ParseTextFileBtn" Grid.Row="1" Content="Распарсить текст песни" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Click="ParseTextFileBtn_Click"/>

        <ListBox
            x:Name="Song"
            Grid.Row="2"
            ItemsSource="{Binding Lines, ElementName=selectSongTextRoot, Mode=TwoWay}"
            Margin="0,10,0,10"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
        >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBox x:Name="TextBoxList" Text="{Binding Path=.}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button x:Name="SaveChangesBtn" Grid.Row="3" Content="Сохранить изменения" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Click="SaveChangesBtn_Click"/>
    </Grid>
</UserControl>
