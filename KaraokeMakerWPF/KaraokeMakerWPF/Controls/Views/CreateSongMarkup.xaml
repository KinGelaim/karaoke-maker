<UserControl x:Class="KaraokeMakerWPF.Controls.Views.CreateSongMarkup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaraokeMakerWPF.Controls.Views"
             xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="CreateSongMarkupRoot">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <Label Content="Путь к файлу музыки:"/>
            <Label Content="{Binding KaraokeInfoVM.MusicFilePath, ElementName=CreateSongMarkupRoot}" VerticalAlignment="Top"/>

            <Label x:Name="StatusLabel" Content="Не проигрывается..." Margin="5" />
            <Button x:Name="PlayBtn" Click="PlayBtn_Click" HorizontalAlignment="Left" Width="150">Проигрывать</Button>
            <Button x:Name="StopBtn" Click="StopBtn_Click" HorizontalAlignment="Left" Width="150">Остановить</Button>

            <Label x:Name="CurrentLineLabel"/>
            <Button x:Name="NextLineBtn" Content="Следующая строка" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Click="NextLineBtn_Click"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" SharedSizeGroup="Column1"/>
                <ColumnDefinition Width="20" SharedSizeGroup="Column2"/>
                <ColumnDefinition Width="40" SharedSizeGroup="Column3"/>
                <ColumnDefinition Width="20" SharedSizeGroup="Column4"/>
                <ColumnDefinition Width="40" SharedSizeGroup="Column4"/>
                <ColumnDefinition Width="20" SharedSizeGroup="Column4"/>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Column5"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Старт"/>
            <TextBlock Grid.Column="2" Text="Конец"/>
            <TextBlock Grid.Column="4" Text="Индекс"/>
            <TextBlock Grid.Column="6" Text="Текст"/>
        </Grid>

        <ListBox
            ItemsSource="{Binding KaraokeInfoVM.SongLines, ElementName=CreateSongMarkupRoot}"
            Margin="0,10,0,0"
            Grid.IsSharedSizeScope="True"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            Grid.Row="2"
        >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" SharedSizeGroup="Column1"/>
                            <ColumnDefinition Width="20" SharedSizeGroup="Column2"/>
                            <ColumnDefinition Width="40" SharedSizeGroup="Column3"/>
                            <ColumnDefinition Width="20" SharedSizeGroup="Column4"/>
                            <ColumnDefinition Width="40" SharedSizeGroup="Column4"/>
                            <ColumnDefinition Width="20" SharedSizeGroup="Column4"/>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="Column5"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Text="{Binding StartTime, Mode=TwoWay}"/>
                        <TextBlock Grid.Column="1" Text="-"/>
                        <TextBox Grid.Column="2" Text="{Binding EndTime, Mode=TwoWay}"/>
                        <TextBlock Grid.Column="3" Text="-"/>
                        <TextBlock x:Name="IndexTextBlock" Grid.Column="4" Text="{Binding Index}" MouseDown="IndexTextBlock_MouseDown"/>
                        <TextBlock Grid.Column="5" Text="-"/>
                        <TextBlock Grid.Column="6" Text="{Binding Text}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
