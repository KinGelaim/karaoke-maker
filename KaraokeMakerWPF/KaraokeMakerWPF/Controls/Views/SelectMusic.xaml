<UserControl x:Class="KaraokeMakerWPF.Controls.Views.SelectMusic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaraokeMakerWPF.Controls.Views"
             xmlns:models="clr-namespace:KaraokeMakerWPF.Controls.Models"
             mc:Ignorable="d" d:DesignWidth="800" Height="45">
    <Grid>
        <Button x:Name="SelectMusicBtn" Content="Выбрать файл mp3" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Click="SelectMusicBtn_Click"/>
        <Label x:Name="MusicLabel" Content="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=MusicFilePath}" Margin="205,2,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
