<UserControl x:Class="KaraokeMakerWPF.Views.CreateKaraoke"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaraokeMakerWPF.Views"
             xmlns:viewmodels="clr-namespace:KaraokeMakerWPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:CreateKaraokeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content="Выбрать папку для видео" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Command="{Binding SelectOutputFolderCommand}"/>
        <Label Content="{Binding OutputFolderLabelText}" Margin="205,2,0,0" VerticalAlignment="Top"/>

        <Button Content="Выбрать файл ffmpeg" HorizontalAlignment="Left" Margin="0,35,0,0" VerticalAlignment="Top" Height="30" Width="200" Command="{Binding SelectFfmpegCommand}"/>
        <Label Content="{Binding FfmpegLabelText}" Margin="205,37,0,0" VerticalAlignment="Top"/>

        <Button Content="Создать КАРАОКЕ!!!" HorizontalAlignment="Left" Margin="0,70,0,0" VerticalAlignment="Top" Height="30" Width="200" Command="{Binding CreateKaraokeVideoCommand}"/>
    </Grid>
</UserControl>
