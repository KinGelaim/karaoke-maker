<UserControl x:Class="KaraokeMakerWPF.Views.SelectFont"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaraokeMakerWPF.Views"
             xmlns:viewmodels="clr-namespace:KaraokeMakerWPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:SelectFontViewModel}"
             mc:Ignorable="d" d:DesignWidth="800" Height="45">
    <Grid>
        <Button Content="Выбрать файл со шрифтом" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="310" Command="{Binding SelectFontPathCommand}"/>
        <Label Content="{Binding KaraokeInfoVM.FontFilePath}" Margin="316,2,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
