<UserControl x:Class="KaraokeMakerWPF.Views.SelectMusic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaraokeMakerWPF.Views"
             xmlns:viewmodels="clr-namespace:KaraokeMakerWPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:SelectMusicViewModel}"
             mc:Ignorable="d" d:DesignWidth="800" Height="45">
    <Grid>
        <Button Content="Выбрать файл музыки" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Command="{Binding SelectMusicPathCommand}"/>
        <Label Content="{Binding KaraokeInfoVM.MusicFilePath}" Margin="205,2,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
