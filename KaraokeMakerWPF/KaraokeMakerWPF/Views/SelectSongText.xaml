<UserControl x:Class="KaraokeMakerWPF.Views.SelectSongText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KaraokeMakerWPF.Views"
             xmlns:viewmodels="clr-namespace:KaraokeMakerWPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:SelectSongTextViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="SelectSongTextRoot">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" Content="Выбрать файл с текстом песни" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Command="{Binding SelectTextFilePathCommand}"/>
        <Label Grid.Row="0" Content="{Binding SongTextFilePath}" Margin="210,2,0,0" VerticalAlignment="Top"/>
        
        <Button Grid.Row="1" Content="Распарсить текст песни" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="200" Command="{Binding ParseCommand}"/>

        <ListBox
            Grid.Row="2"
            ItemsSource="{Binding KaraokeInfoVM.SongLines}"
            Margin="0,10,0,10"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
        >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding Text, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
